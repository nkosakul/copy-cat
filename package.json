{
  "name": "copy-cat",
  "displayName": "Copy Cat",
  "description": "Stores a history of your copied code.",
  "version": "1.0.0",
  "publisher": "nkosakul",
  "engines": {
    "vscode": "^1.63.0"
  },
  "icon": "images/logo.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "Copy Cat",
    "Clipboard history",
    "Copy to clipboard",
    "Clipboard",
    "History"
  ],
  "author": "Nattaphong Kosakul",
  "homepage": "https://github.com/nkosakul/copy-cat",
  "repository": {
    "type": "git",
    "url": "https://github.com/nkosakul/copy-cat.git"
  },
  "bugs": {
    "url": "https://github.com/nkosakul/copy-cat/issues"
  },
  "license": "MIT",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "galleryBanner": {
    "color": "#22292e",
    "theme": "dark"
  },
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Copy Cat",
      "properties": {
        "copy-cat.limit": {
          "type": "number",
          "minimum": 1,
          "default": 15,
          "description": "Maximum number of items that are stored in the history."
        },
        "copy-cat.persistHistory": {
          "type": "boolean",
          "default": true,
          "description": "Persist history between sessions."
        }
      }
    },
    "commands": [
      {
        "command": "copy-cat.showHistory",
        "title": "Copy Cat: Show History"
      },
      {
        "command": "copy-cat.clearHistory",
        "title": "Copy Cat: Clear History"
      }
    ],
    "keybindings": [
      {
        "command": "copy-cat.copy",
        "key": "ctrl+c",
        "mac": "cmd+c",
        "when": "editorTextFocus"
      },
      {
        "command": "copy-cat.cut",
        "key": "ctrl+x",
        "mac": "cmd+x",
        "when": "editorTextFocus"
      },
      {
        "command": "copy-cat.showHistory",
        "key": "shift+ctrl+c",
        "mac": "shift+cmd+c"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run esbuild-base -- --minify",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "yarn run esbuild-base -- --sourcemap",
    "esbuild-watch": "yarn run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.63.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "esbuild": "^0.14.2",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "typescript": "^4.4.4"
  }
}
